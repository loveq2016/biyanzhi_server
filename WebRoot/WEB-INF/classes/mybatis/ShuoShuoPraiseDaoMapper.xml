<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC 
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--这块等于dao接口的实现 namespace必须和接口的类路径一样 -->
<mapper namespace="com.biyanzhi.dao.ShuoShuoPraiseDao">
	<resultMap type="com.biyanzhi.bean.ShuoShuoPraise" id="ShuoShuoPraise">
		<id property="id" column="id" />
		<result property="user_id" column="user_id" />
		<result property="shuoshuo_id" column="shuoshuo_id" />
		<result property="user_avatar" column="user_avatar" />
		<result property="user_name" column="user_name" />

	</resultMap>
	<!-- id必须和接口中的方法名一样 返回一个 就是刚才的别名 如果不弄别名要连类路径一起写 麻烦 -->
	<insert id="insert" parameterType="com.biyanzhi.bean.ShuoShuoPraise"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		shuoshuo_praise(user_id,shuoshuo_id,user_avatar,user_name
		)
		values(#{user_id},#{shuoshuo_id},#{user_avatar},#{user_name}
		)
	</insert>
	<select id="getPariseByShuoShuoID" parameterType="Integer"
		resultMap="ShuoShuoPraise">

		select * from shuoshuo_praise where
		shuoshuo_id=#{shuoshuo_id}

	</select>
</mapper>