<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC 
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--这块等于dao接口的实现 namespace必须和接口的类路径一样 -->
<mapper namespace="com.biyanzhi.dao.PKVoteDao">
	<resultMap type="com.biyanzhi.bean.PKVote" id="PKVote">
		<id property="id" column="id" />
		<result property="pk_id" column="pk_id" />
		<result property="vote_user_id" column="vote_user_id" />


	</resultMap>
	<!-- id必须和接口中的方法名一样 返回一个 就是刚才的别名 如果不弄别名要连类路径一起写 麻烦 -->
	<insert id="addPKVode" parameterType="com.biyanzhi.bean.PKVote">
		insert into
		pk_vote(pk_id,vote_user_id )
		values(#{pk_id},#{vote_user_id}
		)
	</insert>
	<select id="findPKVote" resultType="int" parameterType="Map">
		select
		count(*) from pk_vote
		where pk_id = #{pk_id} and
		vote_user_id=#{vote_user_id}
	</select>
	<select id="getPKVoteListByPKID" resultMap="PKVote"
		parameterType="int">
		select * from pk_vote where pk_id = #{pk_id}
	</select>
</mapper>
 