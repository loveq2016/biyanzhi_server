<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC 
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--这块等于dao接口的实现 namespace必须和接口的类路径一样 -->
<mapper namespace="com.biyanzhi.dao.ShuoShuoDao">
	<resultMap type="com.biyanzhi.bean.ShuoShuo" id="ShuoShuo">
		<id property="id" column="id" />
		<result property="shuoshuo_id" column="shuoshuo_id" />
		<result property="publisher_id" column="publisher_id" />
		<result property="time" column="time" />
		<result property="content" column="content" />
		<result property="publisher_name" column="publisher_name" />
		<result property="publisher_avatar" column="publisher_avatar" />
		<result property="state" column="state" />
		<collection property="comments" column="shuoshuo_id"
			ofType="com.biyanzhi.bean.ShuoShuoComment" select="getCommentByPictureID" />
		<collection property="images" column="shuoshuo_id"
			ofType="com.biyanzhi.bean.ShuoShuoImage" select="getCommentByPictureID" />
		<collection property="praises" column="shuoshuo_id"
			ofType="com.biyanzhi.bean.ShuoShuoPraise" select="getCommentByPictureID" />
	</resultMap>
	<!-- getAppLists必须和接口中的方法名一样 返回一个 就是刚才的别名 如果不弄别名要连类路径一起写 麻烦 -->
	<insert id="insert" parameterType="com.biyanzhi.bean.ShuoShuo"
		useGeneratedKeys="true" keyProperty="shuoshuo_id">
		insert into
		shuoshuo(publisher_id,time,content,publisher_name,publisher_avatar
		)
		values(#{publisher_id},#{time},#{content},#{publisher_name},#{publisher_avatar}
		)
	</insert>
	<select id="getShuoShuoList" parameterType="Map" resultMap="ShuoShuo">
		select
		* from shuoshuo where
		state!=-1
		order
		by
		time
		desc limit #{page}
		,10
	</select>
</mapper>