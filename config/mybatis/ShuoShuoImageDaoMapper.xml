<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC 
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--这块等于dao接口的实现 namespace必须和接口的类路径一样 -->
<mapper namespace="com.biyanzhi.dao.ShuoShuoImageDao">
	<resultMap type="com.biyanzhi.bean.ShuoShuoImage" id="ShuoShuoImage">
		<id property="id" column="id" />
		<result property="img_id" column="img_id" />
		<result property="shuoshuo_id" column="shuoshuo_id" />
		<result property="img_url" column="img_url" />


	</resultMap>
	<!-- id必须和接口中的方法名一样 返回一个 就是刚才的别名 如果不弄别名要连类路径一起写 麻烦 -->
	<insert id="insert" parameterType="java.util.List"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		shuoshuo_images(shuoshuo_id,img_url)values
		<foreach collection="list" item="item" index="index"
			separator=",">
			(#{item.shuoshuo_id},#{item.img_url})
		</foreach>
	</insert>
	<select id="getImageByShuoShuoID" parameterType="Integer"
		resultMap="ShuoShuoImage">
		select * from shuoshuo_images where
		shuoshuo_id=#{shuoshuo_id}

	</select>
</mapper>